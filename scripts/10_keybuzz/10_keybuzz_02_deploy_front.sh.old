#!/usr/bin/env bash
#
# 10_keybuzz_02_deploy_front.sh - Déploiement KeyBuzz Front
#
# Ce script déploie le Frontend KeyBuzz (UI Vue/React) sur le cluster K3s avec :
# - Deployment avec 3+ réplicas
# - Service ClusterIP
# - Build static servi via NGINX container
#
# Usage:
#   ./10_keybuzz_02_deploy_front.sh [servers.tsv]
#
# Prérequis:
#   - Module 9 installé (K3s HA)
#   - Module 10 script 01 exécuté (API déployée)
#   - Exécuter depuis install-01

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
INSTALL_DIR="$(cd "${SCRIPT_DIR}/../.." && pwd)"
TSV_FILE="${1:-${INSTALL_DIR}/servers.tsv}"

# Couleurs
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[✓]${NC} $1"
}

log_error() {
    echo -e "${RED}[✗]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[!]${NC} $1"
}

# Vérifier les prérequis
if [[ ! -f "${TSV_FILE}" ]]; then
    log_error "Fichier servers.tsv introuvable: ${TSV_FILE}"
    exit 1
fi

# Détecter la clé SSH
SSH_KEY_OPTS=""
if [[ -f "${HOME}/.ssh/keybuzz_infra" ]]; then
    SSH_KEY_OPTS="-i ${HOME}/.ssh/keybuzz_infra"
elif [[ -f "${HOME}/.ssh/id_ed25519" ]]; then
    SSH_KEY_OPTS="-i ${HOME}/.ssh/id_ed25519"
elif [[ -f "${HOME}/.ssh/id_rsa" ]]; then
    SSH_KEY_OPTS="-i ${HOME}/.ssh/id_rsa"
fi

# Header
echo "=============================================================="
echo " [KeyBuzz] Module 10 - Déploiement KeyBuzz Front"
echo "=============================================================="
echo ""

# Trouver le premier master K3s
declare -a K3S_MASTER_IPS=()

exec 3< "${TSV_FILE}"
while IFS=$'\t' read -r ENV IP_PUBLIQUE HOSTNAME IP_PRIVEE FQDN USER_SSH POOL ROLE SUBROLE DOCKER_STACK CORE NOTES <&3; do
    if [[ "${ENV}" == "ENV" ]]; then
        continue
    fi
    
    if [[ "${ENV}" != "prod" ]]; then
        continue
    fi
    
    if [[ "${ROLE}" == "k3s" ]] && [[ "${SUBROLE}" == "master" ]] && [[ -n "${IP_PRIVEE}" ]]; then
        K3S_MASTER_IPS+=("${IP_PRIVEE}")
    fi
done
exec 3<&-

if [[ ${#K3S_MASTER_IPS[@]} -lt 1 ]]; then
    log_error "Aucun master K3s trouvé"
    exit 1
fi

MASTER_IP="${K3S_MASTER_IPS[0]}"
log_info "Utilisation du master: ${MASTER_IP}"

# Vérifier la connectivité au cluster
log_info "Vérification de la connectivité au cluster K3s..."
if ! ssh ${SSH_KEY_OPTS} "root@${MASTER_IP}" "kubectl get nodes" > /dev/null 2>&1; then
    log_error "Impossible de se connecter au cluster K3s"
    exit 1
fi
log_success "Cluster K3s accessible"

# Image Docker pour KeyBuzz Front
# Par défaut, on utilise une image placeholder pour tester la configuration
# Remplacez par votre image réelle une fois construite
KEYBUZZ_FRONT_IMAGE="${KEYBUZZ_FRONT_IMAGE:-nginx:alpine}"
KEYBUZZ_FRONT_PORT="${KEYBUZZ_FRONT_PORT:-80}"

log_warning "⚠️  Image Docker: ${KEYBUZZ_FRONT_IMAGE}"
log_warning "⚠️  NOTE: Utilisez une image placeholder pour tester la configuration"
log_warning "⚠️  Remplacez par votre image KeyBuzz Front une fois construite"
log_info "Port: ${KEYBUZZ_FRONT_PORT}"

# Créer le Deployment KeyBuzz Front
log_info "Création du Deployment KeyBuzz Front..."

DEPLOYMENT_YAML=$(cat <<EOF
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keybuzz-front
  namespace: keybuzz
  labels:
    app: keybuzz-front
spec:
  replicas: 3
  selector:
    matchLabels:
      app: keybuzz-front
  template:
    metadata:
      labels:
        app: keybuzz-front
    spec:
      containers:
      - name: keybuzz-front
        image: ${KEYBUZZ_FRONT_IMAGE}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: ${KEYBUZZ_FRONT_PORT}
          name: http
          protocol: TCP
        env:
        - name: API_URL
          value: "http://keybuzz-api.keybuzz.svc.cluster.local"
        # Healthchecks désactivés pour image placeholder
        # Décommentez une fois votre image KeyBuzz Front est prête
        # livenessProbe:
        #   httpGet:
        #     path: /
        #     port: ${KEYBUZZ_FRONT_PORT}
        #   initialDelaySeconds: 10
        #   periodSeconds: 10
        #   timeoutSeconds: 5
        #   failureThreshold: 3
        # readinessProbe:
        #   httpGet:
        #     path: /
        #     port: ${KEYBUZZ_FRONT_PORT}
        #   initialDelaySeconds: 5
        #   periodSeconds: 5
        #   timeoutSeconds: 3
        #   failureThreshold: 3
        resources:
          requests:
            cpu: "100m"
            memory: "128Mi"
          limits:
            cpu: "500m"
            memory: "512Mi"
EOF
)

echo "${DEPLOYMENT_YAML}" | ssh ${SSH_KEY_OPTS} "root@${MASTER_IP}" "kubectl apply -f -" > /dev/null 2>&1
log_success "Deployment keybuzz-front créé"

# Créer le Service
log_info "Création du Service keybuzz-front..."

SERVICE_YAML=$(cat <<EOF
apiVersion: v1
kind: Service
metadata:
  name: keybuzz-front
  namespace: keybuzz
  labels:
    app: keybuzz-front
spec:
  type: ClusterIP
  selector:
    app: keybuzz-front
  ports:
  - port: 80
    targetPort: ${KEYBUZZ_FRONT_PORT}
    protocol: TCP
    name: http
EOF
)

echo "${SERVICE_YAML}" | ssh ${SSH_KEY_OPTS} "root@${MASTER_IP}" "kubectl apply -f -" > /dev/null 2>&1
log_success "Service keybuzz-front créé"

# Attendre que les pods soient prêts
log_info "Attente du démarrage des pods (20 secondes)..."
sleep 20

# Vérifier le statut
log_info "Vérification du statut du déploiement..."
ssh ${SSH_KEY_OPTS} "root@${MASTER_IP}" "kubectl get deployment keybuzz-front -n keybuzz"
echo ""
ssh ${SSH_KEY_OPTS} "root@${MASTER_IP}" "kubectl get pods -n keybuzz -l app=keybuzz-front"

echo ""
echo "=============================================================="
log_success "✅ KeyBuzz Front déployé"
echo "=============================================================="
echo ""
log_info "Configuration:"
log_info "  - Namespace: keybuzz"
log_info "  - Deployment: keybuzz-front (3 réplicas)"
log_info "  - Service: keybuzz-front (ClusterIP)"
log_info "  - Image: ${KEYBUZZ_FRONT_IMAGE}"
echo ""
log_info "Prochaine étape: ./10_keybuzz_03_configure_ingress.sh"
echo ""

